<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-800">

<div class="flex min-h-screen">

  <!-- Sidebar -->
  <aside id="sidebar"
    class="fixed md:static inset-y-0 left-0 z-40 w-64 bg-indigo-700 text-white transform -translate-x-full md:translate-x-0 transition-transform duration-300">

    <div class="p-6 text-2xl font-bold border-b border-indigo-500">
      English Admin
    </div>

    <nav class="p-4 space-y-2">
      <a href="#" class="block px-4 py-2 rounded bg-indigo-600">Dashboard</a>
      <a href="/admin/users" class="block px-4 py-2 rounded hover:bg-indigo-600">Users</a>
      <a href="/admin/courses" class="block px-4 py-2 rounded hover:bg-indigo-600">Courses</a>
      <a href="/admin/tests" class="block px-4 py-2 rounded hover:bg-indigo-600">Tests</a>
      <a href="/admin/results" class="block px-4 py-2 rounded hover:bg-indigo-600">Results</a>
      <a href="/admin/settings" class="block px-4 py-2 rounded hover:bg-indigo-600">Settings</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 md:ml-64">

    <!-- Topbar -->
    <header class="flex items-center justify-between bg-white px-6 py-4 shadow">
      <div class="flex items-center gap-4">
        <button id="menuBtn" class="md:hidden text-2xl">â˜°</button>
        <h1 class="text-xl font-semibold">Dashboard</h1>
      </div>

      <div class="flex items-center gap-3">
        <span class="text-sm font-medium">Admin</span>
        <img src="https://i.pravatar.cc/40"
             class="w-10 h-10 rounded-full border"
             alt="Admin" />
      </div>
    </header>

    <!-- Dashboard Cards -->
    <section class="p-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

      <div class="bg-white rounded-xl shadow p-5">
        <p class="text-sm text-gray-500">Total Users</p>
        <h2 class="text-3xl font-bold mt-2">2,450</h2>
      </div>

      <div class="bg-white rounded-xl shadow p-5">
        <p class="text-sm text-gray-500">Active Today</p>
        <h2 class="text-3xl font-bold mt-2">320</h2>
      </div>

      <div class="bg-white rounded-xl shadow p-5">
        <p class="text-sm text-gray-500">Total Courses</p>
        <h2 class="text-3xl font-bold mt-2">35</h2>
      </div>

      <div class="bg-white rounded-xl shadow p-5">
        <p class="text-sm text-gray-500">Pass Rate</p>
        <h2 class="text-3xl font-bold mt-2">78%</h2>
      </div>

    </section>

    <!-- Content Area -->
    <section class="px-6 pb-6">
      <div class="bg-white rounded-xl shadow p-6">
        <h2 class="text-xl font-semibold mb-2">
          Welcome to the Admin Panel ðŸ‘‹
        </h2>
        <p class="text-gray-600">
          Use the sidebar to manage users, courses, tests, and results.
        </p>
      </div>
    </section>

  </div>
</div>

<!-- Sidebar Toggle Script -->
<script>
  document.getElementById("menuBtn").onclick = () => {
    document.getElementById("sidebar").classList.toggle("-translate-x-full");
  };
</script>

</body>
</html>

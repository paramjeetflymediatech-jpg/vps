    </div>

    <!-- ================= DESKTOP HEADER ================= -->
    <div class="hidden md:flex items-center justify-between mb-8">
      <h1 class="text-2xl font-bold text-gray-800">
        Dashboard
      </h1>

      <div class="flex items-center gap-3">
        <span class="text-sm font-semibold text-gray-600">
          Welcome, Admin
        </span>
      </div>
    </div>

    <!-- ================= STATS CARDS ================= -->

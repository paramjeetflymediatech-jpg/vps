<%- include('../layouts/header') %>
<%- include('../layouts/sidebar') %>

<div class="flex-1 md:ml-64 p-4 md:p-6 bg-pink-100 min-h-screen">

  <!-- Mobile header -->
  <div class="flex items-center justify-between mb-6 md:hidden">
    <button class="menu-btn bg-blue-600 text-white px-3 py-2 rounded">â˜°</button>
    <h1 class="text-xl font-semibold">User Details</h1>
  </div>

  <h1 class="hidden md:block text-2xl font-semibold mb-6">User Details</h1>

  <div class="max-w-3xl bg-white rounded-xl shadow p-6">

    <% if (data) { %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Name -->
      <div>
        <p class="text-sm text-gray-500">Name</p>
        <p class="font-semibold uppercase"><%= data.name %></p>
      </div>

      <!-- Email -->
      <div>
        <p class="text-sm text-gray-500">Email</p>
        <p class="break-all"><%= data.email %></p>
      </div>

      <!-- Role -->
      <div>
        <p class="text-sm text-gray-500">Role</p>
        <span class="inline-block px-3 py-1 rounded-full text-sm
          <%= data.role === 'admin' ? 'bg-red-100 text-red-600' : 'bg-blue-100 text-blue-600' %>">
          <%= data.role %>
        </span>
      </div>

      <!-- Phone -->
      <div>
        <p class="text-sm text-gray-500">Phone</p>
        <p><%= data.phone || '-' %></p>
      </div>

      <!-- Department -->
      <div>
        <p class="text-sm text-gray-500">Department</p>
        <p><%= data.department || '-' %></p>
      </div>

      <!-- Created At -->
      <div>
        <p class="text-sm text-gray-500">Created At</p>
        <p><%= new Date(data.createdAt).toLocaleDateString() %></p>
      </div>

    </div>

    <!-- ACTIONS -->
    <div class="mt-8 flex gap-4">
      <a href="/admin/users" class="px-4 py-2 rounded bg-gray-200">
        Back
      </a>

      <a href="/admin/users/<%= data._id %>/edit" 
         class="px-4 py-2 rounded bg-blue-600 text-white">
        Edit User
      </a>
    </div>

    <% } else { %>
      <p class="text-gray-500">User not found.</p>
    <% } %>

  </div>
</div>

<%- include('../layouts/footer') %>

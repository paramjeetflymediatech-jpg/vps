<%- include('../layouts/header') %>
<%- include('../layouts/sidebar') %>

<!-- MAIN CONTENT -->
<main
  id="mainContent"
  class="bg-gray-100 min-h-screen px-3 sm:px-4 md:px-6 py-6
         w-full md:ml-64 transition-all duration-300"
>

  <div class="w-full max-w-7xl mx-auto">

    <!-- ================= MOBILE HEADER ================= -->
    <div class="flex items-center justify-between mb-6 md:hidden">
      <button
        id="menuBtn"
        class="bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600
               text-white px-3 py-2 rounded-lg shadow text-xl"
      >
        ☰
      </button>

      <h1 class="text-lg font-semibold text-gray-800">
        My Classes
      </h1>

      <a
        href="/admin/classes/create"
        class="bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600
               text-white px-3 py-2 rounded-lg text-sm shadow"
      >
        + Create
      </a>
    </div>

    <!-- ================= DESKTOP HEADER ================= -->
    <div class="hidden md:flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-800">
        My Classes
      </h2>

      <a
        href="/admin/classes/create"
        class="bg-blue-600 text-white px-5 py-2 rounded-lg
               font-semibold shadow hover:bg-blue-700 transition"
      >
        + Create Class
      </a>
    </div>

    <!-- ================= DESKTOP / TABLET TABLE ================= -->
    <div class="hidden md:block bg-white rounded-xl shadow border overflow-x-auto">
      <table class="min-w-full text-sm text-left">
        <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
          <tr>
            <th class="px-6 py-3">
              <div class="flex items-center gap-2">
                <span>Title</span>
                <a
                  href="/admin/classes?sortTitle=<%= sortTitle === 'asc' ? 'desc' : 'asc' %>"
                  class="text-xs text-gray-500 hover:text-gray-800"
                  title="Sort by title"
                >
                  <%= sortTitle === 'asc' ? '▲' : sortTitle === 'desc' ? '▼' : '↕' %>
                </a>
              </div>
            </th>
            <th class="px-6 py-3">Course</th>
            <th class="px-6 py-3">Instructor</th>
            <th class="px-6 py-3">Status</th>
            <th class="px-6 py-3 text-center">Actions</th>
          </tr>
        </thead>

        <tbody class="divide-y">
          <% data.forEach(c => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-medium text-gray-800">
                <%= c.title %>
              </td>

              <td class="px-6 py-4">
                <%= c.courseId?.title || '—' %>
              </td>

              <td class="px-6 py-4">
                <%= (c.tutorId && c.tutorId.name) || '—' %>
              </td>

              <td class="px-6 py-4">
                <span
                  class="px-3 py-1 rounded-full text-xs font-semibold
                  <%= c.status === 'Active'
                    ? 'bg-green-100 text-green-700'
                    : 'bg-gray-200 text-gray-600' %>">
                  <%= c.status %>
                </span>
              </td>

              <td class="px-6 py-4 text-center space-x-4">
                <a
                  href="/admin/classes/edit/<%= c._id %>"
                  class="text-blue-600 font-semibold hover:underline"
                >
                  Edit
                </a>

                <form
                  action="/admin/classes/delete/<%= c._id %>"
                  method="POST"
                  class="inline"
                  onsubmit="return confirm('Delete class?')"
                >
                  <button class="text-red-600 font-semibold hover:underline">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>

          <% if (data.length === 0) { %>
            <tr>
              <td colspan="5" class="py-10 text-center text-gray-400">
                No classes found
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if (typeof page !== 'undefined' && typeof totalPages !== 'undefined' && totalPages > 1) { %>
    <div class="mt-4 flex flex-col sm:flex-row items-center justify-between gap-2 text-sm text-gray-600">
      <div>
        Page <span class="font-semibold"><%= page %></span> of <span class="font-semibold"><%= totalPages %></span>
        (<%= total %> classes)
      </div>
      <div class="space-x-2">
        <% if (page > 1) { %>
          <a
            href="/admin/classes?page=<%= page - 1 %>&limit=<%= limit %><% if (sortTitle) { %>&sortTitle=<%= sortTitle %><% } %>"
            class="px-3 py-1 border rounded-lg bg-white hover:bg-gray-50"
          >
            Previous
          </a>
        <% } %>
        <% if (page < totalPages) { %>
          <a
            href="/admin/classes?page=<%= page + 1 %>&limit=<%= limit %><% if (sortTitle) { %>&sortTitle=<%= sortTitle %><% } %>"
            class="px-3 py-1 border rounded-lg bg-white hover:bg-gray-50"
          >
            Next
          </a>
        <% } %>
      </div>
    </div>
    <% } %>

    <!-- ================= MOBILE VIEW ================= -->
    <div class="md:hidden space-y-4">
      <% data.forEach(c => { %>
        <div class="bg-white rounded-xl shadow border p-4">
          <h3 class="text-lg font-semibold text-gray-800">
            <%= c.title %>
          </h3>

          <p class="text-sm text-gray-600 mt-1">
            Course: <%= c.courseId?.title || '—' %>
          </p>

          <p class="text-sm text-gray-600">
            Instructor: <%= c.tutorId?.name || '—' %>
          </p>

          <span
            class="inline-block mt-2 px-3 py-1 rounded-full text-xs font-semibold
            <%= c.status === 'Active'
              ? 'bg-green-100 text-green-700'
              : 'bg-gray-200 text-gray-600' %>">
            <%= c.status %>
          </span>

          <div class="flex gap-4 mt-4">
            <a
              href="/admin/classes/edit/<%= c._id %>"
              class="text-blue-600 font-semibold"
            >
              Edit
            </a>

            <form
              action="/admin/classes/delete/<%= c._id %>"
              method="POST"
              onsubmit="return confirm('Delete class?')"
            >
              <button class="text-red-600 font-semibold">
                Delete
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>

  </div>
</main>




<!-- ================= SIDEBAR TOGGLE SCRIPT ================= -->
<script>
  const menuBtn = document.getElementById("menuBtn");
  const sidebar = document.querySelector(".sidebar");

  if (menuBtn && sidebar) {
    menuBtn.addEventListener("click", () => {
      sidebar.classList.toggle("hidden");
    });
  }
</script>

<%- include('../layouts/footer') %>
